<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Search Restaurants</title>
    <style>
        .centered-section {
            text-align: center;
            margin: 0 auto;
            max-width: 600px;
        }
        .centered-section ul {
            display: inline-block;
            text-align: left;
        }
    </style>
</head>

<body>
    <h1>Search Restaurants</h1>

    <div class="centered-section">
        <h2>Search Restaurants</h2>
        
        <form action="/search" method="post">
            <div style="margin-bottom: 15px;">
                <label for="address">Enter Address:</label>
                <input type="text" id="address" name="address" placeholder="e.g. 123 Main St, City, State" required style="width: 300px; padding: 5px;">
            </div>
            
            <div style="margin-bottom: 15px;">
                <label for="radius">Search Radius (meters):</label>
                <input type="number" id="radius" name="radius" value="1000" min="500" max="5000" style="width: 100px; padding: 5px;">
            </div>
            
            <div>
                <button type="submit" style="padding: 8px 15px; background-color: #4CAF50; color: white; border: none; cursor: pointer;">Search</button>
            </div>
        </form>
        
        <div style="margin-top: 20px;">
            <a href="/">Back to Home</a>
        </div>
    </div>
    
    <hr>
    
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="centered-section" style="color: red; margin-top: 20px;">
            <p><strong>Error:</strong> <%= error %></p>
        </div>
    <% } %>
    
    <% if (typeof restaurants !== 'undefined' && restaurants && restaurants.length > 0) { %>
        <div class="centered-section" style="margin-top: 20px;">
            <h2>Search Results</h2>
            <p>Found <%= restaurants.length %> restaurants</p>
            
            <ul style="list-style-type: none; padding: 0;">
                <% restaurants.forEach(restaurant => { %>
                    <li style="margin-bottom: 15px; padding: 10px; border: 1px solid #ddd; border-radius: 5px; text-align: left;">
                        <h3><%= restaurant.name %></h3>
                        <p><strong>Address:</strong> <%= restaurant.vicinity %></p>
                        <p><strong>Rating:</strong> <%= restaurant.rating ? restaurant.rating + ' / 5' : 'Not rated' %></p>
                        
                        <form action="/favourites/add" method="post" style="margin-top: 10px;">
                            <input type="hidden" name="name" value="<%= restaurant.name %>">
                            <input type="hidden" name="vicinity" value="<%= restaurant.vicinity %>">
                            <input type="hidden" name="rating" value="<%= restaurant.rating || 0 %>">
                            <button type="submit" style="padding: 5px 10px; background-color: #4CAF50; color: white; border: none; cursor: pointer;">Add to Favourites</button>
                        </form>
                    </li>
                <% }); %>
            </ul>
        </div>
    <% } else if (typeof restaurants !== 'undefined' && restaurants) { %>
        <div class="centered-section" style="margin-top: 20px;">
            <p>No restaurants found for this location.</p>
        </div>
    <% } %>
</body>

</html>
